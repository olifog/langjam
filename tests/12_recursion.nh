#factorial(n) >
    << 1 when n le 1.
    << n * /factorial/(n - 1).
<

#fibonacci(n) >
    << n when n le 1.
    << /fibonacci/(n - 1) + /fibonacci/(n - 2).
<

#sum_to(n) >
    << 0 when n le 0.
    << n + /sum_to/(n - 1).
<

#countdown(n) >
    << 0 when n le 0.
    << /countdown/(n - 1).
<

#main() >
    f5 := /factorial/5.
    /console_log_int/f5.
    << 0.
