// Test: Recursion
// EXPECT: 120

#factorial(n) {
    << 1 when n <= 1.
    << n * /factorial/(n - 1).
}

#fibonacci(n) {
    << n when n <= 1.
    << /fibonacci/(n - 1) + /fibonacci/(n - 2).
}

#sum_to(n) {
    << 0 when n <= 0.
    << n + /sum_to/(n - 1).
}

#countdown(n) {
    << 0 when n <= 0.
    << /countdown/(n - 1).
}

#main() {
    f5 := /factorial/5.
    /console_log_int/f5.
    << 0.
}

