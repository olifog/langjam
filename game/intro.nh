    /draw_rect/(seal_x + 3)/(seal_y + 3)/(seal_w - 6)/(seal_h - 6)/165/55/55/255.
    /draw_rect/(seal_x + 6)/(seal_y + 6)/(seal_w - 12)/(seal_h - 12)/180/65/65/255.
    // "H" on seal for HackNet - center it properly
    h_x := seal_x + seal_w / 2 - 6.
